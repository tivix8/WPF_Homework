<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Menu" Height="350" Width="500">
    <Grid>
        <Menu>
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Click="Exit_Click">
                    <MenuItem.Icon>
                        <Image Source="https://cdn-icons-png.flaticon.com/512/1828/1828778.png" 
                               Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="Задания">
                <MenuItem Header="Калькулятор" Click="OpenCalculator_Click">
                    <MenuItem.Icon>
                        <Image Source="https://ae04.alicdn.com/kf/S8aad08b84a9f426491338e62be97cfd0m.jpg" 
                               Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Тест" Click="OpenTest_Click">
                    <MenuItem.Icon>
                        <Image Source="https://basket-10.wbbasket.ru/vol1559/part155934/155934851/images/big/1.webp" 
                               Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            
        </Menu>

        <TextBlock Text="Выберите задание в меню" 
                   FontSize="20" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"/>
    </Grid>
</Window>