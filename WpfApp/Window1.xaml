<Window x:Class="WpfApp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Тест" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock x:Name="TitleText" Text="Тест по истории" 
                      FontSize="24" FontWeight="Bold"/>
            <TextBlock x:Name="QuestionNumberText" Text="Вопрос 1 из 15" 
                      FontSize="16" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Область с вопросом и вариантами -->
        <ScrollViewer Grid.Row="1" Margin="10">
            <StackPanel>
                <TextBlock x:Name="QuestionText" Text="Текст вопроса" 
                          FontSize="18" TextWrapping="Wrap" Margin="0,0,0,20"/>

                <StackPanel x:Name="AnswersPanel">
                    
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="PrevButton" Content="Назад" Width="100" Margin="5" Click="PrevButton_Click"/>
            <Button x:Name="NextButton" Content="Следующий" Width="100" Margin="5" Click="NextButton_Click"/>
            <Button x:Name="FinishButton" Content="Завершить" Width="100" Margin="5" Click="FinishButton_Click"/>
        </StackPanel>
    </Grid>
</Window>