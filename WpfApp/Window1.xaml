<Window x:Class="WpfApp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Мои задачи" FontSize="24" Foreground="Black"/>
            <TextBlock x:Name="TaskCounter" FontSize="18" Margin="10,5,0,0"/>
        </StackPanel>
        <Grid Grid.Row="0" Margin="0,40,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>

            </Grid.ColumnDefinitions>
            <TextBox x:Name="NewTascerBar" Grid.Column="0" FontSize="16"
                     Padding="12,8" Margin="0,0,10,0" BorderBrush="DarkGray"
                     TextChanged="NewTascerBar_Change"
                     KeyDown="NewTascerBar_KeyDown"
                     ToolTip="Вставьте задачу и нажмите Enter или кнопку"/>
            <Button Content="Добавить"
                    Grid.Column="1"
                    Width="90"
                    Padding="10,8"
                    FontSize="14"
                    Click="AddTask_Click"
                    IsEnabled="False"
                    x:Name="AddButton"/>
        </Grid>
        <ListBox x:Name="TaskList" Grid.Row="1" Background="Transparent"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 SelectionChanged="TaskList_Changed">
            <DataTemplate>
                <Border Background="Red" Margin="0,0,0,8" Padding="12,10"
                        CornerRadius="8" BorderBrush="#e0e0e0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <CheckBox Grid.Column="0"
                                  IsChecked="{Binding IsCompleted}"
                                  Checked="TaskCheckbox_Cheked"
                                  VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Text}"
                                   FontSize="16" Margin="10,0"
                                   VerticalAlignment="Center"/>
                        <Button Content="x" Grid.Column="2" Width="28" Height="28"
                                FontSize="18" Tag="{Binding}" Click="DeleteTask_Click"
                                ToolTip="Удалить Задачу"/>
                    </Grid>
                </Border>
            </DataTemplate>
        </ListBox>

    </Grid>
</Window>
