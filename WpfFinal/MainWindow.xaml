<Window x:Class="WpfFinal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFinal"
        mc:Ignorable="d"
        Title="Калькулятор чаевых" Height="550" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Калькулятор счета" 
                   FontSize="24" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top">
            <TextBlock Text="Сумма счета"/>
            <TextBox x:Name="BillTextBox" TextChanged="Recalculate" PreviewTextInput="OnlyDigits"/>

            <TextBlock Text="Процент чаевых" Margin="0,10,0,0"/>

            <StackPanel Orientation="Horizontal">
                <Button x:Name="Tip10Btn" Content="10%" Click="TipButton_Click" Margin="5,5,5,5"/>
                <Button x:Name="Tip15Btn" Content="15%" Click="TipButton_Click" Margin="5,5,5,5"/>
                <Button x:Name="Tip20Btn" Content="20%" Click="TipButton_Click" Margin="5,5,5,5"/>
            </StackPanel>

            <TextBox x:Name="TipPercentTextBox" 
                     Text="15" 
                     TextChanged="Recalculate" 
                     PreviewTextInput="OnlyDigits"
                     Margin="0,5,0,0"/>
            <TextBlock Text="Или введите свой процент" 
                       FontSize="11" 
                       Foreground="Gray"
                       Margin="5,0"/>

            <TextBlock Text="Количество человек" Margin="0,10,0,0"/>
            <TextBox x:Name="PeopleTextBox"  
                     Text="1"
                     TextChanged="Recalculate"
                     PreviewTextInput="OnlyDigits"/>

            <Rectangle Height="1" Fill="LightGray" Margin="0,15"/>

            <TextBlock Text="Сумма чаевых" FontSize="14" Margin="0,5"/>
            <TextBlock x:Name="TipResultText" 
                       FontWeight="Bold" 
                       FontSize="16"
                       Foreground="DarkRed"/>

            <TextBlock Text="Общая сумма" FontSize="14" Margin="0,5"/>
            <TextBlock x:Name="TotalResultText" 
                       FontWeight="Bold" 
                       FontSize="18"
                       Foreground="DarkGreen"/>

            <TextBlock Text="На одного человека" FontSize="14" Margin="0,5"/>
            <TextBlock x:Name="PerPersonResultText" 
                       FontWeight="Bold" 
                       FontSize="16"
                       Foreground="DarkBlue"/>

            <Button Content="Очистить" 
                    Margin="0,20,0,0" 
                    Click="Clear_Click"
                    Padding="10,5"
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>